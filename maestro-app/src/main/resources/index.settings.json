{
  "index.number_of_shards" : 15,
  "index.max_result_window":300000,
  "analysis":{
    "analyzer":{
      "id_search":{
        "tokenizer":"whitespace",
        "filter":[
          "lowercase"
        ],
        "type":"custom"
      },
      "id_index":{
        "tokenizer":"whitespace",
        "filter":[
          "lowercase",
          "edge_ngram"
        ],
        "type":"custom"
      }
    },
    "filter":{
      "edge_ngram":{
        "side":"front",
        "max_gram":20,
        "min_gram":2,
        "type":"edgeNGram"
      }
    }
  }
}